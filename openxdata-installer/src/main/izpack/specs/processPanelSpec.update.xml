<processing>
    <job name="Stop Tomcat Service" id="tomcat.stop">
        <os family="windows" />
        <executefile name="$installed.dir/script/oxdservice.bat">
            <arg>stop</arg>
        </executefile>
    </job>

    <job name="Updating Files" id="tomcat.stop">
        <os family="windows" />
        <executefile name="$INSTALL_PATH/script/update.bat">
            <arg>updateoxd</arg>
        </executefile>
    </job>
    
    <job name="Start Tomcat Service" id="tomcat.start">
        <os family="windows"/>
        <executefile name="$installed.dir/script/oxdservice.bat">
            <arg>start</arg>
        </executefile>
    </job>
</processing>
