<userInput>


    <!--
    Panel to select the tomcat directory.Helps in selecting where to copy the
    openxdata files
    -->
    <panel id="Tomcat.panel">
               
        <field type="title" txt="OpenXData Directory" bold="true" size="2" />
        <field type="divider" align="top"/>
        
        <field  type="search" variable="installed.dir"  >
            <description align="left" txt="" id="OpenXData Directory"/>
            <spec txt="Path to openXdata directory:" checkfilename="Tomcat6.0/webapps/openXdata/OPENXDATA_SETTINGS.properties"
                  type="directory" result="directory">
                <choice value="$APPLICATIONS_DEFAULT_ROOT/openXdata" os="windows" />
            </spec>
        </field>

    </panel>


</userInput>
